@model IEnumerable<paradise.Models.course_chapters>

@{
    ViewBag.Title = "Quản lý chương học";
}

<link href="~/Content/custom-css/ListView.css" rel="stylesheet" />

@{
    Html.RenderPartial("OverLayLoading", "AdminCourse_chapters");
}

<h4 class="fw-bold m-0">Quản lý chương học</h4>

<div class="d-flex justify-content-between align-items-center mt-5">
    @{
        Html.RenderPartial("SearchingBar", Tuple.Create("Tiêu đề, mô tả hoặc tên khóa học", "AdminCourse_chapters"));
        Html.RenderPartial("AddingButton", Tuple.Create("AdminCourse_chapters"));
    }
</div>

<div class="table-responsive overflow-hidden mt-2 p-4">
    <table class="table align-middle mb-0">
        <thead>
            <tr>
                <th>Khóa học</th>
                <th>Tiêu đề chương</th>
                <th>Mô tả</th>
                <th>Thứ tự hiển thị</th>
                <th>Ngày tạo</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var c in Model)
                {
                    <tr>
                        <td>@(c.cours?.course_title ?? "")</td>
                        <td class="fw-semibold">@c.chapter_title</td>
                        <td>@c.chapter_description</td>
                        <td>@c.display_order</td>
                        <td>
                            @(c.created_at == default(DateTime)
                                ? ""
                                : c.created_at.ToString("dd/MM/yyyy"))
                        </td>
                        <td class="action-icons">
                            <div class="dropdown">
                                <div class="cursor-pointer d-flex align-items-center justify-content-center text-dark text-decoration-none" id="dropdownChapter" data-bs-toggle="dropdown" aria-expanded="false">
                                    <button class="icon-btn">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                </div>
                                <ul class="dropdown-menu custom-dropdown shadow bg-white" aria-labelledby="dropdownChapter">
                                    <li>
                                        <a href="@Url.Action("Edit", "AdminCourse_chapters", new { area = "Admin", id = c.id })" class="text-decoration-none">
                                            <button class="action_btn">Chỉnh sửa</button>
                                        </a>
                                    </li>
                                    <li>
                                        <button class="action_btn" title="Delete"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal"
                                                data-chapterid="@c.id"
                                                data-chaptertitle="@c.chapter_title">
                                            Xóa
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted p-5">
                        Không có dữ liệu.
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @{
        Html.RenderPartial(
            "Pagination",
            Tuple.Create((int)ViewBag.Page, (int)ViewBag.TotalPages, "Index", (string)ViewBag.Search)
        );
    }
</div>

@* Modal xóa *@
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-3">
            <div class="modal-header bg-dark text-white rounded-top-3">
                <h5 class="modal-title fw-semibold">Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa chương <strong id="deleteChapterTitle"></strong> không?</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post" action="">
                    <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Hủy</button>
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-dark shadow-sm">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const chapterId = button.getAttribute('data-chapterid');
        const chapterTitle = button.getAttribute('data-chaptertitle');

        document.getElementById('deleteChapterTitle').textContent = chapterTitle || "";

        const form = document.getElementById('deleteForm');
        form.action = `/Admin/AdminCourse_chapters/Delete/${chapterId}`;
    });
</script>
