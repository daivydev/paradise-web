<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Admin</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

    <style>
        body {
            font-family: 'Be Vietnam Pro', sans-serif;
            font-size: 16px;
            color: #212529;
        }

        h1, h2, h3, h4, h5, h6 {
            font-weight: 600;
        }

        /* Header */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 60px;
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-right: 20px;
            z-index: 1000;
        }

            .header .logo {
                font-size: 1.5rem;
                font-weight: 700;
            }

            .header .user-info {
                display: flex;
                align-items: center;
                cursor: pointer;
            }

                .header .user-info img {
                    width: 36px;
                    height: 36px;
                    border-radius: 50%;
                    margin-right: 10px;
                }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 60px;
            left: 0;
            width: 250px;
            height: calc(100vh - 60px);
            background-color: #fff;
            overflow-y: auto;
            border-right: 1px solid #dee2e6;
            padding: 1rem 0.5rem;
        }

            .sidebar .nav-link {
                transition: all 0.2s ease-in-out;
                border-radius: 8px;
                padding: 0.75rem 1rem;
                color: #212529;
            }

                .sidebar .nav-link i {
                    font-size: 1.2rem;
                    margin-right: 8px;
                    transition: all 0.3s ease;
                }

                .sidebar .nav-link:hover {
                    transform: translateX(5px);
                    background-color: #fdeaea;
                    color: #e60000 !important;
                }

                    .sidebar .nav-link:hover i {
                        color: #DC3545;
                    }

        .custom-dropdown {
            border-radius: 10px;
            min-width: 160px;
            padding: 12px;
            background-color: #212529;
        }

            .custom-dropdown .dropdown-item {
                color: #f8f9fa;
                padding: 8px;
                transition: all 0.2s ease;
                border-radius: 6px;
                background-color: transparent;
            }

                .custom-dropdown .dropdown-item:hover {
                    color: #fff;
                    transform: translateX(3px);
                }

        /* Main content */
        .main-content {
            margin-left: 250px;
            margin-top: 60px;
            padding: 20px;
        }

        .text-sm {
            font-size: 14px;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="logo border-end h-100 d-flex align-items-center justify-content-center" style="width: 250px; padding: 0 8px">Parad<span class="text-success">ise</span></div>
        <div class="user-info dropdown" data-bs-toggle="dropdown">
            <img src="https://th.bing.com/th/id/R.8017e15eaa0806121682151c5b58a77e?rik=pVD5ItQo4AyvQg&riu=http%3a%2f%2ffantasyfootballrundown.com%2fwp-content%2fuploads%2f2019%2f12%2fnate-sumner-avatar_400x400.png&ehk=X5UwIvm0ZUCN6%2bneOtAtnoEfHGloU1HXwMQzwkc%2bPeg%3d&risl=&pid=ImgRaw&r=0" alt="Admin">
            <strong>Admin</strong>
            <ul class="dropdown-menu custom-dropdown shadow">
                <li><a class="dropdown-item text-center" href="#">Sign out <i class="bi bi-box-arrow-right ms-2"></i></a></li>
            </ul>
        </div>
    </header>

    <!-- Sidebar -->
    <nav class="sidebar d-flex flex-column">
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a href="@Url.Action("Index", "AdminUsers", new { area = "Admin" })"
                   class="nav-link text-dark d-flex align-items-center text-sm">
                    <i class="bi bi-person-lines-fill"></i> Thành Viên
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index", "AdminCourse_Reviews", new { area = "Admin" })"
                   class="nav-link text-dark d-flex align-items-center text-sm">
                    <i class="bi bi-credit-card-2-front"></i> Đánh Giá Khóa Học
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index", "AdminCourse_Enrollments", new { area = "Admin" })"
                   class="nav-link text-dark d-flex align-items-center text-sm">
                    <i class="bi bi-postcard"></i> Đăng ký khóa học
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index", "AdminQuizs", new { area = "Admin" })"
                   class="nav-link text-dark d-flex align-items-center text-sm">
                    <i class="bi bi-question-square"></i> Bài kiểm tra
                </a>
            </li>
            <li>
                @Html.ActionLink("Client", "Index", "Home", new { area = "" }, new { @class = "nav-link text-danger fw-semibold" })
            </li>
        </ul>
    </nav>

    <!-- Main content -->
    <div class="main-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
