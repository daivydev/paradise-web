@using System
@model System.Tuple<int, int, string, string>  
@{
    var page = Model.Item1;
    var totalPages = Model.Item2;
    var action = Model.Item3;
    var search = Model.Item4;
    Func<int, string> link = p => Url.Action(action, new { area = "Admin", page = p, search = search });
}
@if (totalPages > 1)
{
    <nav class="d-flex justify-content-center mt-3">
        <ul class="pagination">
            <li class="page-item @(page <= 1 ? "disabled" : "")">
                <a class="page-link" href="@(page <= 1 ? "#" : link(page - 1))">«</a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a class="page-link" href="@link(i)">@i</a>
                </li>
            }

            <li class="page-item @(page >= totalPages ? "disabled" : "")">
                <a class="page-link" href="@(page >= totalPages ? "#" : link(page + 1))">»</a>
            </li>
        </ul>
    </nav>
}
