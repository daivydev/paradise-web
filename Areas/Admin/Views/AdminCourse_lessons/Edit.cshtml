@model paradise.Models.course_lessons

@{
    ViewBag.Title = "Chỉnh sửa bài học";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<div class="page-container">
    <h4 class="fw-bold m-0">Chỉnh sửa bài học</h4>

    <div class="page-content">
        @using (Html.BeginForm("Edit", "AdminCourse_lessons", FormMethod.Post, new { area = "Admin", id = "lessonForm", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.id)

            <div class="form-card row g-3">
                <!-- Chương -->
                <div class="col-md-6 form-group">
                    @Html.LabelFor(m => m.chapter_id, "Chương")
                    @Html.DropDownListFor(m => m.chapter_id,
                        (SelectList)ViewBag.chapter_id,
                        new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.chapter_id, "", new { @class = "text-danger" })
                </div>

                <!-- Tiêu đề bài học -->
                <div class="col-md-6 form-group">
                    @Html.LabelFor(m => m.lesson_title, "Tiêu đề bài học")
                    @Html.TextBoxFor(m => m.lesson_title, new { @class = "form-control", placeholder = "Nhập tiêu đề bài học..." })
                    @Html.ValidationMessageFor(m => m.lesson_title, "", new { @class = "text-danger" })
                </div>

                <!-- Thứ tự hiển thị -->
                <div class="col-md-6 form-group">
                    @Html.LabelFor(m => m.display_order, "Thứ tự hiển thị")
                    @Html.TextBoxFor(m => m.display_order, new { @class = "form-control", type = "number", min = "0", placeholder = "Thứ tự" })
                    @Html.ValidationMessageFor(m => m.display_order, "", new { @class = "text-danger" })
                </div>

                <!-- Ngày tạo -->
                <div class="col-md-6 form-group">
                    @Html.LabelFor(m => m.created_at, "Ngày tạo")
                    @Html.TextBoxFor(m => m.created_at, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(m => m.created_at, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Actions -->
            <div class="actions">
                <a href="@Url.Action("Index", "AdminCourse_lessons", new { area = "Admin" })" class="btn-secondary">Hủy bỏ</a>
                <button type="submit" class="btn-primary">Xác nhận</button>
            </div>
        }
    </div>
</div>

<style>
    /* Page Layout */
    .page-container {
        margin: 0 auto;
        padding: 0 1rem;
    }

    .page-content {
        max-width: 900px;
        margin: 60px auto 0;
    }

    /* Card */
    .form-card {
        border-radius: 1rem;
        padding: 2.5rem;
        background: #fff;
        box-shadow: 0 6px 24px rgba(0,0,0,.05);
        transition: .3s ease-in-out;
    }

        .form-card:hover {
            box-shadow: 0 10px 32px rgba(0,0,0,.08);
        }

    /* Labels */
    .form-group label {
        font-weight: 500;
        font-size: .9rem;
        color: #374151;
        margin-bottom: .4rem;
        display: block;
    }

    /* Inputs & Selects */
    .form-group input, .form-group select {
        width: 100%;
        padding: .85rem 1rem;
        border: 1px solid #e5e7eb;
        border-radius: .25rem;
        font-size: .95rem;
        background: #fafafa;
        color: #111827;
        transition: .2s;
    }

        .form-group input:focus, .form-group select:focus {
            outline: none;
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99,102,241,.15);
            background: #fff;
        }

    /* Actions */
    .actions {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 2rem;
    }

    /* Buttons */
    .btn-primary {
        background: #111827;
        color: #fff;
        padding: .85rem 1.75rem;
        border-radius: .5rem;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: .25s;
    }

        .btn-primary:hover {
            background: #1f2937;
            transform: translateY(-2px);
            box-shadow: 0 4px 14px rgba(99,102,241,.3);
        }

    .btn-secondary {
        background: #f9fafb;
        color: #374151;
        padding: .85rem 1.75rem;
        border-radius: .5rem;
        font-weight: 500;
        text-decoration: none;
        border: 1px solid #e5e7eb;
        transition: .25s;
    }

        .btn-secondary:hover {
            background: #f3f4f6;
            color: #111827;
            transform: translateY(-2px);
        }
</style>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Helpers/custom-validation.js"></script>
}
