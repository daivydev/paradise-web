@model paradise.Models.ViewModels.CourseListVM
@{
    ViewBag.Title = "Khóa học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Tất cả khóa học</h2>
        <span class="text-muted">@Model.Total khóa học</span>
    </div>

    <form method="get" class="row g-2 mb-3">
        <div class="col-12 col-md-6">
            <input name="q" value="@Model.Q" class="form-control" placeholder="Tìm khóa học..." />
        </div>
        @if (Model.Topics != null)
        {
            <div class="col-6 col-md-3" style="margin-left: auto !important">
                @Html.DropDownList("topicId", Model.Topics, "-- Tất cả chủ đề --", new { @class = "form-select" })
            </div>
        }
  
        <div class="col-12 col-md-1 d-grid">
            <button class="btn btn-primary">Lọc</button>
        </div>
    </form>

    <div class="row g-3">
        @foreach (var c in Model.Items)
        {
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                <div class="card h-100 shadow-sm">
                    <div class="ratio ratio-16x9">
                        @{
                            var thumb = string.IsNullOrWhiteSpace(c.Thumbnail)
                                ? Url.Content("~/Content/img/course-fallback.jpg")
                                : c.Thumbnail;
                        }
                        <img class="card-img-top" src="@thumb" alt="@c.Title" />
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title text-truncate" title="@c.Title">@c.Title</h6>
                        <p class="card-text small text-muted" style="-webkit-line-clamp:2;display:-webkit-box;-webkit-box-orient:vertical;overflow:hidden;">
                            @c.ShortDescription
                        </p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            @*<span class="fw-semibold">
                                @(c.Price.HasValue ? String.Format("{0:N0}₫", c.Price.Value) : "Miễn phí")
                            </span>*@
                            <span class="fw-semibold">Miễn phí</span>
                            <a class="btn btn-primary btn-sm"
                               href="@Url.Action("Detail","Courses", new { id = c.Id })">
                                Tham gia khóa học
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
