@model paradise.Models.ViewModels.CourseListVM
@{
    ViewBag.Title = "Khóa học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --brand: #ff6b35;
        --ink: #212121;
        --card-bg: #fff;
        --muted: #6b7280;
    }

    /* ===== Card ===== */
    .course-card {
        border: 1px solid #eef0f2;
        border-radius: 14px;
        overflow: hidden;
        background: var(--card-bg);
        transition: transform .25s ease, box-shadow .25s ease, border-color .25s ease;
    }

        .course-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 24px rgba(0,0,0,.08);
            border-color: #e7eaee;
        }

        /* khu vực ảnh */
        .course-card .thumb {
            overflow: hidden;
            border-bottom: 1px solid #f0f2f5;
        }

            .course-card .thumb img {
                width: 100%;
                height: 100%;
                vertical-align: bottom;
                object-fit: cover;
                transition: transform .35s ease;
                will-change: transform;
            }

        .course-card:hover .thumb img {
            transform: scale(1.06);
        }

        /* nội dung */
        .course-card .card-body {
            padding: 20px 14px 16px;
        }

        .course-card .card-title {
            font-size: 1.4em;
            font-weight: 700;
            color: var(--ink);
            margin-bottom: .85rem;
        }

        .course-card .card-text {
            color: var(--muted);
            margin-bottom: 40px;
            min-height: 2.6em; /* giữ cao đều 2 dòng */
        }

    .price-pill {
        font-size: large;
        font-weight: 700;
        color: #15803d;
    }

    /* ===== Animated Join Button ===== */
    .animated-join {
        font-size: 1.6rem;
        background: transparent;
        border: none;
        line-height: 1;
        padding: 6px 16px;
        border-radius: 999px;
        position: relative;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 14px;
        font-weight: 600;
        color: var(--brand);
        box-shadow: 0 0 0 2px var(--brand);
        cursor: pointer;
        overflow: hidden;
        transition: all .6s cubic-bezier(.23,1,.32,1);
        text-decoration: none;
    }

        .animated-join svg {
            position: absolute;
            width: 18px;
            height: 18px;
            fill: var(--brand);
            z-index: 2;
            transition: all .8s cubic-bezier(.23,1,.32,1);
        }

        .animated-join .arr-1 {
            right: 10px;
        }

        .animated-join .arr-2 {
            left: -28%;
        }

        .animated-join .circle {
            position: absolute;
            inset: 50% auto auto 50%;
            transform: translate(-50%,-50%);
            width: 16px;
            height: 16px;
            background: var(--brand);
            border-radius: 50%;
            opacity: 0;
            transition: all .8s cubic-bezier(.23,1,.32,1);
            z-index: 1;
        }

        .animated-join .text {
            position: relative;
            z-index: 3;
            transform: translateX(-10px);
            transition: all .8s cubic-bezier(.23,1,.32,1);
            white-space: nowrap;
        }

        .animated-join:hover {
            box-shadow: 0 0 0 10px transparent;
            color: #fff;
            border-radius: 12px;
        }

            .animated-join:hover .arr-1 {
                right: -28%;
            }

            .animated-join:hover .arr-2 {
                left: 8px;
            }

            .animated-join:hover .text {
                transform: translateX(10px);
            }

            .animated-join:hover svg {
                fill: #fff;
            }

            .animated-join:hover .circle {
                width: 160px;
                height: 160px;
                opacity: 1;
            }

        .animated-join:active {
            transform: scale(.97);
            box-shadow: 0 0 0 2px var(--brand);
        }

    /* Reduce motion */
    @@media (prefers-reduced-motion: reduce) {
        .course-card *, .animated-join, * {
            transition: none !important
        }
    }

    .btn-clearfilter:hover {
        color: #fff;
        background: var(--brand);
    }

    /* Search input with magnifier icon */
    .search-wrap {
        position: relative;
    }

        .search-wrap .search-ico {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            width: 18px;
            height: 18px;
            color: #9aa4b2; /* màu xám nhạt */
        }

        .search-wrap .form-control {
            padding-left: 40px; /* chừa chỗ cho icon */
        }


</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Tất cả khóa học</h2>
        <span class="text-dark fw-bold align-self-end">@Model.Total khóa học sẵn có</span>
    </div>

    <form method="get" class="row g-2 mb-3">
        <div class="col-12 col-md-6">
            <div class="search-wrap">
                <input name="q"
                       value="@Model.Q"
                       class="form-control"
                       placeholder="Tìm khóa học..."
                       aria-label="Tìm khóa học" />
                <!-- magnifier icon (inline SVG) -->
                <svg class="search-ico" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <circle cx="11" cy="11" r="7" stroke="currentColor" stroke-width="2" />
                    <path d="M16.5 16.5L21 21" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                </svg>
            </div>
        </div>
        @if (Model.Topics != null)
        {
            <div class="col-6 col-md-3 ms-auto">
                @Html.DropDownList("topicId", Model.Topics, "-- Tất cả chủ đề --", new { @class = "form-select" })
            </div>
        }
        <div class="col-12 col-md-1 d-grid">
            <button class="btn btn-primary">Lọc</button>
        </div>
    </form>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 mt-lg-4">
        @foreach (var c in Model.Items)
        {
            <div class="col mt-lg-4">
                <div class="card course-card h-100">
                    <div class="ratio ratio-16x9 thumb">
                        @{
                            var thumb = string.IsNullOrWhiteSpace(c.Thumbnail)
                                ? Url.Content("/Content/img/course-fallback.png")
                                : c.Thumbnail;
                        }
                        <img class="card-img-top"
                             src="@thumb"
                             alt="@c.Title"
                             onerror="this.onerror=null;this.src='@Url.Content("/Content/img/course-fallback.png")';" />
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title text-truncate" title="@c.Title">@c.Title</h6>
                        <p class="card-text small" style="-webkit-line-clamp:2;display:-webkit-box;-webkit-box-orient:vertical;overflow:hidden;">
                            @c.ShortDescription
                        </p>

                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="price-pill">Miễn phí</span>

                            <a class="animated-join"
                               href="@Url.Action("Detail","Courses", new { id = c.Id })"
                               aria-label="Tham gia khóa học @c.Title">
                                <svg viewBox="0 0 24 24" class="arr-2"><path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z" /></svg>
                                <span class="text">Tham gia khóa học</span>
                                <br />
                                <span class="circle" aria-hidden="true"></span>
                                <svg viewBox="0 0 24 24" class="arr-1"><path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z" /></svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @* Empty state khi không có kết quả lọc *@
    @if (!(Model.Items?.Any() ?? false))
    {
        <div class="text-center py-5 my-4 rounded-3 bg-light-subtle">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M3 7a2 2 0 0 1 2-2h6l2 2h6a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7Z"
                      stroke="#94a3b8" stroke-width="1.5" />
                <path d="M8 13h8M8 16h5M7 10h10" stroke="#94a3b8" stroke-width="1.5" stroke-linecap="round" />
            </svg>

            <h5 class="mt-3 mb-1">Không tìm thấy khóa học</h5>

            <p class="text-muted mb-3">
                @if (string.IsNullOrWhiteSpace(Model.Q))
                {
                    @:Không có khóa học phù hợp với bộ lọc hiện tại.
                }
                else
                {       
                    @:Không có kết quả cho '<strong>@Html.Encode(Model.Q)</strong>'
                }
            </p>

            <div class="d-flex gap-2 justify-content-center">
                <a class="btn btn-outline-secondary btn-sm btn-clearfilter" href="@Url.Action("Index","Courses")">
                    Xóa bộ lọc
                </a>
                @if (Model.TopicId.HasValue)
                {
                    <a class="btn btn-outline-primary btn-sm"
                       href="@Url.Action("Index","Courses", new { q = Model.Q })">
                        Bỏ lọc chủ đề
                    </a>
                }
            </div>
        </div>
    }

</div>

<script>
  document.addEventListener('DOMContentLoaded', function(){
    document.querySelectorAll('.thumb img').forEach(function(img){
      img.addEventListener('error', function(){
        this.onerror = null;
        this.src = '@Url.Content("/Content/img/course-fallback.png")';
      });
    });
  });
</script>
